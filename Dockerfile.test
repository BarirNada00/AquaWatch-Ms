FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY api_service/requirements.txt /app/api_service/requirements.txt
COPY anomaly_detector/requirements.txt /app/anomaly_detector/requirements.txt
COPY satellite_processor/requirements.txt /app/satellite_processor/requirements.txt
COPY api-sig/requirements.txt /app/api-sig/requirements.txt

RUN pip install --no-cache-dir -r api_service/requirements.txt
RUN pip install --no-cache-dir -r anomaly_detector/requirements.txt
RUN pip install --no-cache-dir -r satellite_processor/requirements.txt
RUN pip install --no-cache-dir -r api-sig/requirements.txt

# Install test dependencies
RUN pip install pytest pytest-cov pytest-asyncio

# Copy source code
COPY . /app/

# Set environment variables for testing
ENV PYTHONPATH=/app
ENV TEST=true

# Run tests
CMD ["pytest", "--tb=short", "--cov=.", "--cov-report=xml"]
