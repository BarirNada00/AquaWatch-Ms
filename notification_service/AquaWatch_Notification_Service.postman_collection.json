	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost:8003/api/alerts/health",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8003",
					"path": [
						"api",
						"alerts",
						"health"
					]
				},
				"description": "Check if the notification service is running and healthy"
			}
		},
		{
			"name": "Notifications",
			"item": [
				{
					"name": "Send SMS",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"to\": \"+1234567890\",\n  \"message\": \"Alert: Temperature spike detected at sensor-01. Value: 42.3°C\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:8003/api/notifications/sms",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8003",
							"path": [
								"api",
								"notifications",
								"sms"
							]
						},
						"description": "Send SMS notification via Twilio. Replace phone number with your actual number in E.164 format."
					}
				},
				{
					"name": "Send Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"to\": \"test@example.com\",\n  \"subject\": \"Water Quality Alert - Temperature Spike\",\n  \"message\": \"<h2>Alert Notification</h2><p><strong>Sensor:</strong> sensor-01</p><p><strong>Parameter:</strong> Temperature</p><p><strong>Value:</strong> 42.3°C</p><p><strong>Status:</strong> Exceeds threshold of 35.0°C</p><p><strong>Action Required:</strong> Please investigate immediately.</p>\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:8003/api/notifications/email",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8003",
							"path": [
								"api",
								"notifications",
								"email"
							]
						},
						"description": "Send email notification via SendGrid or SMTP. Replace email with your actual email address."
					}
				}
			]
		},
		{
			"name": "Alerts",
			"item": [
				{
					"name": "Create Alert",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"alertType\": \"ANOMALY\",\n  \"severity\": \"HIGH\",\n  \"title\": \"Temperature Spike Detected\",\n  \"message\": \"Temperature exceeded threshold: 40.5°C at sensor-01\",\n  \"sensorId\": \"sensor-01\",\n  \"anomalyId\": \"anomaly-123\",\n  \"recipientPhone\": \"+1234567890\",\n  \"recipientEmail\": \"alerts@aquawatch.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:8003/api/alerts",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8003",
							"path": [
								"api",
								"alerts"
							]
						},
						"description": "Create a new alert. Will automatically send SMS and Email if recipients are provided."
					}
				},
				{
					"name": "Create Alert from Anomaly",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": \"anomaly-abc123\",\n  \"type\": \"SPIKE\",\n  \"timestamp\": \"2024-01-15T10:30:00\",\n  \"sensorId\": \"sensor-01\",\n  \"parameter\": \"temperature\",\n  \"value\": 42.3,\n  \"message\": \"Temperature spike detected: 42.3°C exceeds threshold of 35.0°C\",\n  \"latitude\": 33.5731,\n  \"longitude\": -7.5898,\n  \"recipientPhone\": \"+1234567890\",\n  \"recipientEmail\": \"alerts@aquawatch.com\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:8003/api/alerts/anomaly",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "8003",
							"path": [
								"api",
								"alerts",
								"anomaly"
							]
						},
						"description": "Create an alert from an anomaly detection event. Used for integration with anomaly detector service."
					}
				},
